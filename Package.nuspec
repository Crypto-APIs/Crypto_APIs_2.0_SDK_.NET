  <metadata>
    <id>CryptoAPIs</id>
    <version>1.7.0</version>
    <authors>Crypto APIs Team</authors>
    <owners>Crypto APIs Team</owners>
    <licenseUrl>https://opensource.org/licenses/MIT</licenseUrl>
    <projectUrl>https://github.com/Crypto-APIs/Crypto_APIs_2.0_SDK_.NET</projectUrl>
    <iconUrl>https://cryptoapis.io/favicon.png</iconUrl>
